{
  "groups": [
    {
      "name": "spring.mail",
      "type": "site.mingsha.boot.starter.mail.autoconfigure.MingshaMailProperties",
      "sourceType": "site.mingsha.boot.starter.mail.autoconfigure.MingshaMailProperties"
    }
  ],
  "properties": [
    {
      "name": "spring.mail.host",
      "type": "java.lang.String",
      "description": "SMTP服务器地址",
      "defaultValue": "localhost"
    },
    {
      "name": "spring.mail.port",
      "type": "java.lang.Integer",
      "description": "SMTP服务器端口",
      "defaultValue": 25
    },
    {
      "name": "spring.mail.username",
      "type": "java.lang.String",
      "description": "用户名"
    },
    {
      "name": "spring.mail.password",
      "type": "java.lang.String",
      "description": "密码"
    },
    {
      "name": "spring.mail.protocol",
      "type": "java.lang.String",
      "description": "协议",
      "defaultValue": "smtp"
    },
    {
      "name": "spring.mail.ssl",
      "type": "java.lang.Boolean",
      "description": "是否启用SSL",
      "defaultValue": false
    },
    {
      "name": "spring.mail.tls",
      "type": "java.lang.Boolean",
      "description": "是否启用TLS",
      "defaultValue": false
    },
    {
      "name": "spring.mail.connection-timeout",
      "type": "java.lang.Integer",
      "description": "连接超时时间（毫秒）",
      "defaultValue": 5000
    },
    {
      "name": "spring.mail.read-timeout",
      "type": "java.lang.Integer",
      "description": "读取超时时间（毫秒）",
      "defaultValue": 5000
    },
    {
      "name": "spring.mail.write-timeout",
      "type": "java.lang.Integer",
      "description": "写入超时时间（毫秒）",
      "defaultValue": 5000
    },
    {
      "name": "spring.mail.default-encoding",
      "type": "java.lang.String",
      "description": "默认编码",
      "defaultValue": "UTF-8"
    }
  ]
} 